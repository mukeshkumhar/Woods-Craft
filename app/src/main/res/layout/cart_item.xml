<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        app:cardCornerRadius="20sp"
        android:layout_margin="10sp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/light_brawn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView5"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_marginStart="10sp"
                app:cardCornerRadius="20sp"
                app:cardElevation="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/cardImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image4" />
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/crossBtn"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:src="@drawable/cross"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="TextView"
                android:textColor="@color/dark_brawn"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/materialCardView5"
                app:layout_constraintTop_toTopOf="@+id/materialCardView5" />

            <TextView
                android:id="@+id/cardDis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="5sp"
                android:text="Subtitle"
                android:textColor="@color/light_brawn1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/materialCardView5"
                app:layout_constraintTop_toBottomOf="@+id/titleCard" />

            <ImageView
                android:id="@+id/star11"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15sp"
                android:src="@drawable/star_icon"
                app:layout_constraintStart_toEndOf="@+id/materialCardView5"
                app:layout_constraintTop_toBottomOf="@+id/cardDis" />

            <ImageView
                android:id="@+id/star22"
                android:layout_width="18sp"
                android:layout_height="18sp"

                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/star11"
                app:layout_constraintStart_toEndOf="@+id/star11"
                app:layout_constraintTop_toTopOf="@+id/star11" />

            <ImageView
                android:id="@+id/star33"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/star22"
                app:layout_constraintStart_toEndOf="@+id/star22"
                app:layout_constraintTop_toTopOf="@+id/star22" />

            <ImageView
                android:id="@+id/star44"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/star33"
                app:layout_constraintStart_toEndOf="@+id/star33"
                app:layout_constraintTop_toTopOf="@+id/star33" />

            <ImageView
                android:id="@+id/star55"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:src="@drawable/star_icon"
                app:layout_constraintBottom_toBottomOf="@+id/star44"
                app:layout_constraintStart_toEndOf="@+id/star44"
                app:layout_constraintTop_toTopOf="@+id/star44" />

            <TextView
                android:id="@+id/cartRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/light_brawn1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/star55"
                app:layout_constraintStart_toEndOf="@+id/star55"
                app:layout_constraintTop_toTopOf="@+id/star55" />


            <TextView
                android:id="@+id/priceOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10sp"
                android:text="M.R.P.: ₹ 499"
                android:textColor="@color/dark_brawn1"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/materialCardView5"
                app:layout_constraintTop_toBottomOf="@+id/star11" />

            <TextView
                android:id="@+id/peiceT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 299"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15sp"
                android:textColor="@color/green"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/materialCardView5"
                app:layout_constraintTop_toBottomOf="@+id/priceOld" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>